<h1> Change your band details</h1>

<form action="<%= band_url(@band) %>" method="POST">
  <input type="hidden" 
    name="authenticity_token" 
    value="<%= form_authenticity_token %>" >
    
  <input name='_method' type='hidden' value='patch' />
  <label for="band_name">Name: </label>
  <input type="text" 
   name="band[name]" 
   id="band_name"
   value="<%= @band.name %>">
  <input type="submit" value="Make the band">
</form>