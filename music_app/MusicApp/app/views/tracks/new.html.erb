<h1> Make a new Track </h1>

<form action="<%= tracks_url %>" method="POST">

  <label for="track_name">Name: </label>
  <input type="text" 
   name="track[name]" 
   id="track_name"
   value="<%= @track.name %>">
  <br>
  <label for="track_album_id">Which album is the track part of? </label>
  <select name="track[album_id]" id="track_album_id">
    <option></option>
  <% @albums.each do |album| %>
    <option 
      value="<%= album.id %>"
      <%= "selected" if album.id == @track.album_id %> 
      ><%= album.name %></option>
  <% end %>
  </select>
  
  <br>
  <label for="track_bonus">Bonus:<label>
  <input type="radio" name="track[bonus]" id="track_bonus" value="bonus">
  <br>
  
  <label for="track_regular">Regular:<label>
  <input type="radio" name="track[bonus]" id="track_regular" value="regular">
  <br>
  
  <label for="track_lyrics"></label>
  <textarea name="track[lyrics]" id="track_lyrics"><%= @track.lyrics%></textarea>
  <input type="submit" value="Make Track">
</form>
