<h1> Edit your Track </h1>

<form action="<%= track_url(@track) %>" method="POST">
  <input name='_method' type='hidden' value='patch' />
  <label for="track_name">Name: </label>
  <input type="text" 
   name="track[name]" 
   id="track_name"
   value="<%= @track.name %>">
  <br>
  <label for="track_album_id">Which album is the track part of? </label>
  <select name="track[album_id]" id="track_album_id">
    <option></option>
  <% @albums.each do |album| %>
    <option 
      value="<%= album.id %>"
      <%= "selected" if album.id == @track.album_id %> 
      ><%= album.name %></option>
  <% end %>
  </select>
  <br>
  <input type="submit" value="Edit Album">
</form>
